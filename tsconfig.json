{
  "compilerOptions": {
    /* ===== Runtime ===== */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    /* ===== Interop ===== */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* ===== Paths ===== */
    "rootDir": "./src",
    "outDir": "./dist",

    /* ===== Types ===== */
    "types": ["node"],

    /* ===== Quality ===== */
    "strict": true,
    "skipLibCheck": true,

    /* ===== TS-node ===== */
    "sourceMap": true
  }
}
